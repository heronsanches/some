<resources>
   <!-- Base application theme. -->
   <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <!-- toolbar app -->
      <item name="colorPrimary">@color/github</item>
      <!-- toolbar Android OS -->
      <item name="colorPrimaryDark">@color/github</item>
      <item name="colorAccent">@color/accent</item>
      <item name="android:textViewStyle">@style/MyTextViewFontDefault</item>
      <!-- text color toolbar app-->
      <item name="android:textColorPrimary">@color/white</item>
   </style>

   <style name="MyTextViewFontDefault">
      <item name="android:textColor">@color/gray900</item>
      <item name="android:textSize">14sp</item>
   </style>
</resources>