<resources>
   <!-- Base application theme. -->
   <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <!-- toolbar app -->
      <item name="colorPrimary">@color/colorgithub</item>
      <!-- toolbar Android OS -->
      <item name="colorPrimaryDark">@color/colorgithub</item>
      <item name="colorAccent">@color/colorAccent</item>
      <item name="android:textViewStyle">@style/MyTextViewFontDefault</item>
      <!-- text color toolbar app-->
      <item name="android:textColorPrimary">@color/colorWhite</item>
   </style>

   <style name="MyTextViewFontDefault">
      <item name="android:textColor">@color/colorGray900</item>
      <item name="android:textSize">14sp</item>
   </style>
</resources>